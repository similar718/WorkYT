<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_36"
      android:background="@color/white">
    
    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_14"
        android:src="@drawable/personal_online"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_52"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/text_black"
        android:text="张凌赫"
        />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_100"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/personal_blue"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/iv_head"
        android:text="在线"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="09:11"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/tab_textcolor_normal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_px"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_51"
        android:background="@color/personal_line"
        />
  </RelativeLayout>
</layout>